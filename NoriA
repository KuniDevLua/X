aBtn.BackgroundColor3 = BUTTON_BLUE
aBtn.TextColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", aBtn)

aBtn.MouseButton1Click:Connect(function()
    if not canClick then return end
    canClick = false
    animateStatus(status, "ðŸ”„ Randomizing", 40)
    local start = tick()
    while tick() - start < 40 do randomize(false,true); wait(2) end
    local rares = randomize(true,false)
    if #rares > 0 then status.Text = "âœ… Found:\n"..table.concat(rares,"\n") else status.Text = "âœ… Found Rare Pet" end
    wait(3); status.Text = ""
    canClick = true
end)

