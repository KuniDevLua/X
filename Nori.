local localPlayer = Players.LocalPlayer or Players:GetPlayers()[1]
while not localPlayer:FindFirstChild("PlayerGui") do wait() end

local gui = Instance.new("ScreenGui")
gui.Name = "RandomizerStyledGUI"
pcall(function() gui.Parent = game:GetService("CoreGui") end)
if not gui.Parent then gui.Parent = localPlayer.PlayerGui end

-- ðŸŒ² Color Theme & Font
local BROWN_BG = Color3.fromRGB(118,61,25)
local ACCENT_GREEN = Color3.fromRGB(110,196,99)
