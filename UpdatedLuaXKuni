Instance.new("UICorner", box).CornerRadius = UDim.new(0, 12)

local title = Instance.new("TextLabel", box)
title.Size = UDim2.new(1, 0, 0.4, 0)
title.Text = "Kuni Hub"
title.Font = Enum.Font.GothamBlack
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.BackgroundTransparency = 1
title.TextScaled = true

local status = Instance.new("TextLabel", box)
status.Size = UDim2.new(1, 0, 0.3, 0)
status.Position = UDim2.new(0, 0, 0.4, 0)
status.Text = "Loading..."
status.Font = Enum.Font.Gotham
tatus.TextColor3 = Color3.fromRGB(255, 255, 255)
status.BackgroundTransparency = 1
status.TextScaled = true

wait(2)
loadingGui:Destroy()

-- üéõÔ∏è Main GUI
local gui = Instance.new("ScreenGui", PlayerGui)
gui.Name = "KuniHubGUI"

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 260, 0, 180)
frame.Position = UDim2.new(0.02, 0, 0.4, 0)
frame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
frame.Active = true
frame.Draggable = true
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 12)

local header = Instance.new("TextLabel", frame)
header.Size = UDim2.new(1, -20, 0, 30)
header.Position = UDim2.new(0, 10, 0, 5)
header.Text = "Egg Randomizer"
header.Font = Enum.Font.GothamBlack
header.TextColor3 = Color3.fromRGB(0, 255, 0)
header.BackgroundTransparency = 1
header.TextScaled = true

local footer = Instance.new("TextLabel", frame)
footer.Size = UDim2.new(1, -20, 0, 20)
footer.Position = UDim2.new(0, 10, 1, -25)
footer.Text = "Made by Kuni Hub"
footer.Font = Enum.Font.Gotham
footer.TextColor3 = Color3.fromRGB(200, 200, 200)
footer.BackgroundTransparency = 1
footer.TextScaled = true

local statusLabel = Instance.new("TextLabel", frame)
statusLabel.Size = UDim2.new(1, -20, 0, 20)
statusLabel.Position = UDim2.new(0, 10, 0, 40)
statusLabel.Text = ""
statusLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
statusLabel.BackgroundTransparency = 1
statusLabel.Font = Enum.Font.Gotham
statusLabel.TextScaled = true

local manualBtn = Instance.new("TextButton", frame)
manualBtn.Size = UDim2.new(0.9, 0, 0, 30)
manualBtn.Position = UDim2.new(0.05, 0, 0, 70)
manualBtn.Text = "Manual Randomizer"
manualBtn.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
manualBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
manualBtn.Font = Enum.Font.GothamBold
manualBtn.TextScaled = true
Instance.new("UICorner", manualBtn).CornerRadius = UDim.new(0, 8)

local autoBtn = Instance.new("TextButton", frame)
autoBtn.Size = UDim2.new(0.9, 0, 0, 30)
autoBtn.Position = UDim2.new(0.05, 0, 0, 110)
autoBtn.Text = "Auto Randomizer"
autoBtn.BackgroundColor3 = Color3.fromRGB(50, 30, 30)
autoBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
autoBtn.Font = Enum.Font.GothamBold
autoBtn.TextScaled = true
Instance.new("UICorner", autoBtn).CornerRadius = UDim.new(0, 8)

-- üåü Buttons Na Gawa ko
local canClick = true

manualBtn.MouseButton1Click:Connect(function()
    if not canClick then return end
    canClick = false
    statusLabel.Text = "Randomizing..."
    randomizeEggs(false, false)
    wait(1.5)
    statusLabel.Text = ""
    canClick = true
end)

autoBtn.MouseButton1Click:Connect(function()
    if not canClick then return end
    canClick = false
    statusLabel.Text = "Rolling..."
    local start = tick()
    while tick() - start < 38 do
        randomizeEggs(false, true)
        statusLabel.TextTransparency = 0
        for i = 1, 5 do
            statusLabel.Text = "Rolling" .. string.rep(".", i)
            wait(0.15)
        end
        wait(1.5)
    end
    local rares = randomizeEggs(true, false)
    if #rares > 0 then
        statusLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
        statusLabel.Text = "‚úÖ Rare Found:\n" .. table.concat(rares, "\n")
    else
        statusLabel.Text = "‚úÖ Rare Pet Found"
    end
    wait(3)
    statusLabel.Text = ""
    canClick = true
end)
